{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "incremental": true,
    "strict": true, // 엄격한 타입 검사 비활성화
    "noImplicitAny": true, // 암시적 any 허용
    "skipLibCheck": true, // 라이브러리 체크 생략
    "forceConsistentCasingInFileNames": false, // 파일 대소문자 체크 완화
    "paths": {
      "@/*": ["*"], // baseUrl설정으로부터 시작하므로 ./src/*
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"],
      "@enums": ["enums/index.ts"],
      "@enums/*": ["enums/*"],
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@constants/*": ["constants/*"],
      "@contexts/*": ["contexts/*"],
      "@styles/*": ["styles/*"],
      "@components/*": ["components/*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["next-env.d.ts", "src/types/**/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
